<div id="content">
  <div style="width: 40%; float:left">
    <strong>Bienvenido a tu perfil:</strong>
    <p>
      <%= @user.email %>
      <span class="logo icon fa-bicycle"></span>

      <%= image_tag "perf.jpg" %>
      <%= social_share_button_tag("SmartBike") %>
    </p>
  </div>

  <div style="width: 40%; float:right">
    Estos son tus progresos:
    <br>

    <p>
    <strong>Distancia:</strong>
    <%= @user.distancia %> [km] 
    <span class="logo icon fa-dashboard"></span>
    </p>

    <p>
      <strong>Tiempo:</strong>
      <%= @user.tiempo %> [horas]
      <span class="logo icon fa-clock-o"></span>
    </p>

    <p>
      <strong>CO2:</strong>
      <%= @user.co2 %>  [C02]
      <span class="logo icon fa-calculator"></span>
    </p>

    <p>
      <strong>Calorias:</strong>
      <%= @user.calorias %> [Kcal]
      <span class="logo icon fa-medkit"></span>
    </p>
  </div>
</div>

