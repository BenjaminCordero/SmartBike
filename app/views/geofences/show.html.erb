  <script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
  <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<body>
  <br>

  <div style='width: 820px;'>
    <div id="map" style='width: 900px; height: 500px;'>

      <% if @geofence.alarm? %>
        <script type="text/javascript">

          handler = Gmaps.build('Google');
          handler.buildMap({ provider: {}, internal: {id: 'map', zoom: 10}}, function(){
            markers = handler.addMarkers([
              {
                "lat": <%=@geofence.x_act %>,
                "lng": <%=@geofence.y_act %>
              }
            ]);
            handler.bounds.extendWith(markers);
            handler.fitMapToBounds();
            }
          );

          setInterval( function(){
            <% geogeo = Geofence.new 
             geogeo.id = 1
             geogeo.reload %>
            handler.buildMap({ provider: {}, internal: {id: 'map', zoom: 10}}, function(){
            markers = handler.addMarkers([
              {
                "lat": <%=geogeo.x_act %>,
                "lng": <%=geogeo.y_act %>
              }
            ]);
            handler.bounds.extendWith(markers);
            handler.fitMapToBounds();
            }
          );
          }, 10000);
        </script>

        <%= social_share_button_tag("SmartBike") %>
      <%else %>

      Â¡Esta bicicleta no ha activado la alarma!
      <span class="logo icon fa-bicycle"></span>
      
      <%end %>

    </div>
  </div>

</body>